ARG FLARE_BASE_IMAGE
FROM $FLARE_BASE_IMAGE AS Builder
RUN go run build/build.go
RUN export VERSION=$(cat RELEASE_VERSION) && \
    export COMMIT=$(cat RELEASE_COMMIT) && \
    export BUILD_DATE=`date +%FT%T%z` && \
    echo "$BUILD_DATE / $COMMIT / $VERSION" && \
    GOARM=7	GOARCH=arm go build -ldflags "-w -s -X 'github.com/w4n9k4n9/flare/internal/version.Version=$VERSION' -X 'github.com/w4n9k4n9/flare/internal/version.Commit=$COMMIT' -X 'github.com/w4n9k4n9/flare/internal/version.BuildDate=$BUILD_DATE'" -o flare main.go
RUN upx -9 -o flare.minify flare && mv flare.minify flare


FROM arm32v7/alpine:3.19
COPY --from=Builder /app/flare /bin/flare
RUN apk add tzdata
WORKDIR /app
CMD ["flare"]